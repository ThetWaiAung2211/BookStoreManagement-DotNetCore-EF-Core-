@{
    ViewData["Title"] = "Home";
    var books = ViewData["books"] as IEnumerable<Book>;
}
@model IEnumerable<BookManagement.Models.BookCategory> ;
<div class="container mt-5">
    <div class="row">
        <div class="col-sm-2">
            <div>
                <h3>Categories</h3>
            </div>
            <div>
                <ul class="list-group list-group-flush align-items-start">
                    <li class="list-group-item p-0 active category-list w-100">
                        <a class="nav-link text-dark category-btn" href="/book/category/books/0" >All</a>
                    </li>
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item p-0 category-list w-100">
                            <a class="nav-link text-dark category-btn" href="/book/category/books/@(item.Category_Id)" >@item.Category_Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-sm-10">
            <div class="container mb-3">
                <div>
                    <h3>Popular Books</h3>
                </div>
                <div class="row row-cols-1 row-cols-md-3 g-4 mb-1">
                    @foreach (var item in books.Take(3))
                    {
                        <div class="col-sm-4 p-0">
                            <a class="nav-link h-100" href="#">
                                <div class="card h-100">
                                    <div>
                                        <img src="~/photos/indexPhoto.jpg" class="w-100 h-100" />
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Book_Title</h5>
                                        <p class="card-text"></p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">Last updated 3 mins ago</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                <div class="justify-content-end d-flex">
                    <a class="nav-link" asp-controller="Book" asp-action="AllBooks"><button class="btn btn-primary">See more</button></a>
                </div>
            </div>

            <!--Discount Books-->
            <div class="container mb-3" style="margin-bottom:100px">
                <div>
                    <h3>Discount Books</h3>
                </div>
                <div class="row row-cols-1 row-cols-md-3 g-4 mb-1 ">
                    @foreach (var item in Model.Take(3))
                    {
                        <div class="col-sm-4 p-0">
                            <a class="nav-link" href="#">
                                <div class="card h-100">
                                    <div>
                                        <img src="~/photos/indexPhoto.jpg" class="w-100 h-100" />
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Category_Name</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                <div class="justify-content-end d-flex">
                    <button class="btn btn-primary">See more</button>
                </div>
            </div>
        </div>
    </div>
</div>

